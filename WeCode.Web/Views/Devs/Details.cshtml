

<div id="dev-details" class="container-fluid">

    <h1 class="mt-5">{{title}}</h1>

    <p>Details</p>

    <!-- First / Last name -->

    <div class="row mb-3">
        <label class="col-2">First name</label>
        <div class="col-3">
            <input type="text" class="form-control" v-model="firstName" />
        </div>

        <label class="col-2">Last name</label>
        <div class="col-3">
            <input type="text" class="form-control" v-model="lastName" />
        </div>
    </div>

    <!-- Category -->
    <div class="row">
        <label class="col-2" >Category</label>
        <div class="col-3">
            <select class="form-control">
                <option v-for="category in categories">{{category}}</option> 
            </select>
        </div>

        <label class="col-2">Birthday</label>
        <div class="col-3">
            <input type="text" class="form-control" v-model="birthday" />
        </div>
    </div>

    <!-- Buttons -->
    <div class="row">
        <div class="col-md">
            <button v-on:click="save" class="btn btn-primary">Save</button>
        </div>
    </div>

</div>


<script>

    jQuery(document).ready(function () {
        var devsDetails = new DevsDetails(@Request["id"]);
    });

</script>


